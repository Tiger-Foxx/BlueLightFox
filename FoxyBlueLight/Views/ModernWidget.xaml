<Window x:Class="FoxyBlueLight.Views.ModernWidget"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:tb="http://www.hardcodet.net/taskbar"
        xmlns:local="clr-namespace:FoxyBlueLight"
        xmlns:viewModels="clr-namespace:FoxyBlueLight.ViewModels"
        xmlns:lvc="clr-namespace:LiveCharts.Wpf;assembly=LiveCharts.Wpf"
        mc:Ignorable="d"
        Title="Foxy Blue Light" 
        Height="450" Width="320"
        WindowStyle="None" 
        AllowsTransparency="True"
        Background="Transparent"
        ResizeMode="NoResize"
        Topmost="True">
    
    <Window.DataContext>
        <viewModels:MainViewModel/>
    </Window.DataContext>
    
    <Window.Resources>
        <!-- Style pour les boutons ronds -->
        <Style x:Key="RoundButton" TargetType="Button">
            <Setter Property="Width" Value="32"/>
            <Setter Property="Height" Value="32"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Background" Value="#22ffffff"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="0"/>
            <Setter Property="Margin" Value="3"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Grid>
                            <Ellipse Fill="{TemplateBinding Background}"/>
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#44ffffff"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#66ffffff"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <!-- Style pour le slider personnalisé -->
        <Style x:Key="ModernSlider" TargetType="Slider">
            <Setter Property="Foreground" Value="#00B4FF"/>
            <Setter Property="Background" Value="#333333"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="Margin" Value="0,5"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Slider">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto" MinHeight="{TemplateBinding MinHeight}"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <Border x:Name="TrackBackground" Grid.Row="1" Height="4" 
                                   CornerRadius="2" Background="#22FFFFFF" Margin="7,0"/>
                            <Track x:Name="PART_Track" Grid.Row="1">
                                <Track.DecreaseRepeatButton>
                                    <RepeatButton Command="Slider.DecreaseLarge">
                                        <RepeatButton.Template>
                                            <ControlTemplate TargetType="RepeatButton">
                                                <Border Height="4" CornerRadius="2" Background="{TemplateBinding Background}"/>
                                            </ControlTemplate>
                                        </RepeatButton.Template>
                                        <RepeatButton.Background>
                                            <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                                <GradientStop Color="#00B4FF" Offset="0"/>
                                                <GradientStop Color="#00E0FF" Offset="1"/>
                                            </LinearGradientBrush>
                                        </RepeatButton.Background>
                                    </RepeatButton>
                                </Track.DecreaseRepeatButton>
                                <Track.IncreaseRepeatButton>
                                    <RepeatButton Command="Slider.IncreaseLarge">
                                        <RepeatButton.Template>
                                            <ControlTemplate TargetType="RepeatButton">
                                                <Border Background="Transparent"/>
                                            </ControlTemplate>
                                        </RepeatButton.Template>
                                    </RepeatButton>
                                </Track.IncreaseRepeatButton>
                                <Track.Thumb>
                                    <Thumb>
                                        <Thumb.Template>
                                            <ControlTemplate TargetType="Thumb">
                                                <Grid>
                                                    <Ellipse Width="16" Height="16" Fill="#FFFFFF">
                                                        <Ellipse.Effect>
                                                            <DropShadowEffect BlurRadius="5" ShadowDepth="1" Color="#55000000"/>
                                                        </Ellipse.Effect>
                                                    </Ellipse>
                                                </Grid>
                                            </ControlTemplate>
                                        </Thumb.Template>
                                    </Thumb>
                                </Track.Thumb>
                            </Track>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <!-- Style pour les labels -->
        <Style x:Key="ValueLabel" TargetType="TextBlock">
            <Setter Property="Foreground" Value="#CCFFFFFF"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Margin" Value="0,2,0,5"/>
        </Style>
        
        <!-- Style pour les groupes -->
        <Style x:Key="WidgetGroupBox" TargetType="GroupBox">
            <Setter Property="Foreground" Value="#FFFFFF"/>
            <Setter Property="Margin" Value="0,10"/>
            <Setter Property="BorderBrush" Value="#33FFFFFF"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="GroupBox">
                        <Grid Margin="{TemplateBinding Margin}">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            <Border Grid.Row="1" 
                                    Background="#15FFFFFF" 
                                    BorderBrush="{TemplateBinding BorderBrush}"
                                    BorderThickness="{TemplateBinding BorderThickness}"
                                    CornerRadius="10"
                                    Padding="12">
                                <ContentPresenter/>
                            </Border>
                            <TextBlock Grid.Row="0" 
                                       Text="{TemplateBinding Header}" 
                                       FontWeight="SemiBold"
                                       FontSize="13"
                                       Foreground="#CCFFFFFF"
                                       Margin="5,0,0,5"/>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
    
    <Grid MouseDown="Grid_MouseDown">
        <!-- Fond avec effet de flou et coins arrondis -->
        <Border CornerRadius="15" Opacity="0.95" x:Name="MainBorder">
            <Border.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                    <GradientStop Color="#1E1E2E" Offset="0"/>
                    <GradientStop Color="#2D2B55" Offset="0.5"/>
                    <GradientStop Color="#1E1E2E" Offset="1"/>
                </LinearGradientBrush>
            </Border.Background>
            <Border.Effect>
                <DropShadowEffect BlurRadius="20" ShadowDepth="1" Color="#70000000"/>
            </Border.Effect>
        </Border>
        
        <!-- Contenu principal -->
        <Grid Margin="15">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/> <!-- En-tête -->
                <RowDefinition Height="*"/>     <!-- Contenu -->
            </Grid.RowDefinitions>
            
            <!-- En-tête avec boutons -->
            <Grid Grid.Row="0" Margin="0,0,0,10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <!-- Logo et titre -->
                <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                    <Ellipse Width="20" Height="20" Fill="#00B4FF" Margin="0,0,8,0"/>
                    <TextBlock Text="FOXY BLUE LIGHT" 
                               Foreground="White" 
                               FontWeight="SemiBold" 
                               FontSize="14"
                               VerticalAlignment="Center"/>
                </StackPanel>
                
                <!-- Boutons de contrôle -->
                <StackPanel Grid.Column="2" Orientation="Horizontal" HorizontalAlignment="Right">
                    <Button Style="{StaticResource RoundButton}" Click="MinimizeButton_Click">
                        <Path Data="M19,13H5V11H19V13Z" Fill="White" Stretch="Uniform" Margin="8"/>
                    </Button>
                    <Button Style="{StaticResource RoundButton}" Click="CloseButton_Click">
                        <Path Data="M19,6.41L17.59,5L12,10.59L6.41,5L5,6.41L10.59,12L5,17.59L6.41,19L12,13.41L17.59,19L19,17.59L13.41,12L19,6.41Z" 
                              Fill="White" Stretch="Uniform" Margin="8"/>
                    </Button>
                </StackPanel>
            </Grid>
            
            <!-- Contenu principal défilant -->
            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                <StackPanel>
                    <!-- Section On/Off avec grand bouton -->
                    <Grid Margin="0,5,0,15">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        
                        <TextBlock Grid.Column="0" 
                                   Text="Protection des yeux" 
                                   Foreground="#FFFFFF"
                                   FontSize="16" 
                                   VerticalAlignment="Center"/>
                        
                        <Border Grid.Column="1" 
                                Width="60" Height="30" 
                                Background="{Binding Settings.IsEnabled, Converter={StaticResource BoolToColorConverter}}"
                                CornerRadius="15"
                                BorderThickness="0"
                                Padding="2">
                            <Border.Triggers>
                                <EventTrigger RoutedEvent="Border.Loaded">
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <ColorAnimation Storyboard.TargetProperty="(Border.Background).(SolidColorBrush.Color)"
                                                            To="#3AA0FF" Duration="0:0:0.2"/>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </EventTrigger>
                            </Border.Triggers>
                            <Grid>
                                <Ellipse x:Name="SwitchThumb" 
                                         Width="26" Height="26" 
                                         Fill="White"
                                         HorizontalAlignment="{Binding Settings.IsEnabled, Converter={StaticResource BoolToAlignmentConverter}}"
                                         Margin="1,0">
                                    <Ellipse.Effect>
                                        <DropShadowEffect BlurRadius="2" ShadowDepth="1" Color="#55000000"/>
                                    </Ellipse.Effect>
                                </Ellipse>
                                
                                <Border Background="Transparent" MouseDown="ToggleSwitch_MouseDown" Cursor="Hand"/>
                            </Grid>
                        </Border>
                    </Grid>
                    
                    <!-- Graphique de température/luminosité -->
                    <Border Background="#15FFFFFF" CornerRadius="10" Height="80" Margin="0,0,0,15">
                        <lvc:CartesianChart Series="{Binding ChartSeries}" 
                                          DisableAnimations="False"
                                          Hoverable="False"
                                          DataTooltip="{x:Null}">
                            <lvc:CartesianChart.AxisX>
                                <lvc:Axis ShowLabels="False" IsEnabled="False"/>
                            </lvc:CartesianChart.AxisX>
                            <lvc:CartesianChart.AxisY>
                                <lvc:Axis ShowLabels="False" IsEnabled="False"/>
                            </lvc:CartesianChart.AxisY>
                        </lvc:CartesianChart>
                    </Border>
                    
                    <!-- Section Température -->
                    <GroupBox Header="TEMPÉRATURE" Style="{StaticResource WidgetGroupBox}">
                        <StackPanel>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Column="0" 
                                           Text="Niveau de chaleur"
                                           Foreground="#CCFFFFFF"/>
                                <TextBlock Grid.Column="1" 
                                           Text="{Binding Settings.ColorTemperature, StringFormat='{}{0:N0}K'}"
                                           Foreground="#FFFFFF"/>
                            </Grid>
                            <Slider Style="{StaticResource ModernSlider}"
                                    Minimum="1900" Maximum="6500" 
                                    Value="{Binding Settings.ColorTemperature, Mode=TwoWay}"
                                    IsSnapToTickEnabled="False"
                                    ValueChanged="Slider_ValueChanged"/>
                            
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Column="0" 
                                           Text="Intensité"
                                           Foreground="#CCFFFFFF"/>
                                <TextBlock Grid.Column="1" 
                                           Text="{Binding Settings.Intensity, StringFormat='{}{0:P0}'}"
                                           Foreground="#FFFFFF"/>
                            </Grid>
                            <Slider Style="{StaticResource ModernSlider}"
                                    Minimum="0" Maximum="1" 
                                    Value="{Binding Settings.Intensity, Mode=TwoWay}"
                                    IsSnapToTickEnabled="False"
                                    ValueChanged="Slider_ValueChanged"/>
                        </StackPanel>
                    </GroupBox>
                    
                    <!-- Section Luminosité -->
                    <GroupBox Header="LUMINOSITÉ" Style="{StaticResource WidgetGroupBox}">
                        <StackPanel>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Column="0" 
                                           Text="Niveau"
                                           Foreground="#CCFFFFFF"/>
                                <TextBlock Grid.Column="1" 
                                           Text="{Binding Settings.Brightness, StringFormat='{}{0:P0}'}"
                                           Foreground="#FFFFFF"/>
                            </Grid>
                            <Slider Style="{StaticResource ModernSlider}"
                                    Minimum="0.1" Maximum="1" 
                                    Value="{Binding Settings.Brightness, Mode=TwoWay}"
                                    IsSnapToTickEnabled="False"
                                    ValueChanged="Slider_ValueChanged"/>
                        </StackPanel>
                    </GroupBox>
                    
                    <!-- Section Mode -->
                    <GroupBox Header="MODE" Style="{StaticResource WidgetGroupBox}">
                        <StackPanel>
                            <ComboBox ItemsSource="{Binding FilterModeNames}"
                                      SelectedIndex="{Binding SelectedModeIndex}"
                                      Margin="0,5,0,5"
                                      Background="#22FFFFFF"
                                      Foreground="White"
                                      BorderThickness="0"
                                      SelectionChanged="Mode_SelectionChanged"/>
                            
                            <Grid Visibility="{Binding IsCustomMode, Converter={StaticResource BoolToVisibilityConverter}}">
                                <StackPanel>
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Grid.Column="0" 
                                                   Text="Rouge"
                                                   Foreground="#FFBABA"/>
                                        <TextBlock Grid.Column="1" 
                                                   Text="{Binding Settings.RedMultiplier, StringFormat='{}{0:P0}'}"
                                                   Foreground="#FFBABA"/>
                                    </Grid>
                                    <Slider Style="{StaticResource ModernSlider}"
                                            Minimum="0" Maximum="1" 
                                            Value="{Binding Settings.RedMultiplier, Mode=TwoWay}"
                                            ValueChanged="Slider_ValueChanged">
                                        <Slider.Template>
                                            <ControlTemplate TargetType="Slider">
                                                <Grid>
                                                    <Grid.RowDefinitions>
                                                        <RowDefinition Height="Auto"/>
                                                        <RowDefinition Height="Auto" MinHeight="{TemplateBinding MinHeight}"/>
                                                        <RowDefinition Height="Auto"/>
                                                    </Grid.RowDefinitions>
                                                    <Border x:Name="TrackBackground" Grid.Row="1" Height="4" 
                                                           CornerRadius="2" Background="#22FFFFFF" Margin="7,0"/>
                                                    <Track x:Name="PART_Track" Grid.Row="1">
                                                        <Track.DecreaseRepeatButton>
                                                            <RepeatButton Command="Slider.DecreaseLarge">
                                                                <RepeatButton.Template>
                                                                    <ControlTemplate TargetType="RepeatButton">
                                                                        <Border Height="4" CornerRadius="2" Background="#FFBABA"/>
                                                                    </ControlTemplate>
                                                                </RepeatButton.Template>
                                                            </RepeatButton>
                                                        </Track.DecreaseRepeatButton>
                                                        <Track.IncreaseRepeatButton>
                                                            <RepeatButton Command="Slider.IncreaseLarge">
                                                                <RepeatButton.Template>
                                                                    <ControlTemplate TargetType="RepeatButton">
                                                                        <Border Background="Transparent"/>
                                                                    </ControlTemplate>
                                                                </RepeatButton.Template>
                                                            </RepeatButton>
                                                        </Track.IncreaseRepeatButton>
                                                        <Track.Thumb>
                                                            <Thumb>
                                                                <Thumb.Template>
                                                                    <ControlTemplate TargetType="Thumb">
                                                                        <Grid>
                                                                            <Ellipse Width="16" Height="16" Fill="#FFFFFF">
                                                                                <Ellipse.Effect>
                                                                                    <DropShadowEffect BlurRadius="5" ShadowDepth="1" Color="#55000000"/>
                                                                                </Ellipse.Effect>
                                                                            </Ellipse>
                                                                        </Grid>
                                                                    </ControlTemplate>
                                                                </Thumb.Template>
                                                            </Thumb>
                                                        </Track.Thumb>
                                                    </Track>
                                                </Grid>
                                            </ControlTemplate>
                                        </Slider.Template>
                                    </Slider>
                                    
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Grid.Column="0" 
                                                   Text="Vert"
                                                   Foreground="#BAFFBA"/>
                                        <TextBlock Grid.Column="1" 
                                                   Text="{Binding Settings.GreenMultiplier, StringFormat='{}{0:P0}'}"
                                                   Foreground="#BAFFBA"/>
                                    </Grid>
                                    <Slider Style="{StaticResource ModernSlider}"
                                            Minimum="0" Maximum="1" 
                                            Value="{Binding Settings.GreenMultiplier, Mode=TwoWay}"
                                            ValueChanged="Slider_ValueChanged">
                                        <Slider.Template>
                                            <ControlTemplate TargetType="Slider">
                                                <Grid>
                                                    <Grid.RowDefinitions>
                                                        <RowDefinition Height="Auto"/>
                                                        <RowDefinition Height="Auto" MinHeight="{TemplateBinding MinHeight}"/>
                                                        <RowDefinition Height="Auto"/>
                                                    </Grid.RowDefinitions>
                                                    <Border x:Name="TrackBackground" Grid.Row="1" Height="4" 
                                                           CornerRadius="2" Background="#22FFFFFF" Margin="7,0"/>
                                                    <Track x:Name="PART_Track" Grid.Row="1">
                                                        <Track.DecreaseRepeatButton>
                                                            <RepeatButton Command="Slider.DecreaseLarge">
                                                                <RepeatButton.Template>
                                                                    <ControlTemplate TargetType="RepeatButton">
                                                                        <Border Height="4" CornerRadius="2" Background="#BAFFBA"/>
                                                                    </ControlTemplate>
                                                                </RepeatButton.Template>
                                                            </RepeatButton>
                                                        </Track.DecreaseRepeatButton>
                                                        <Track.IncreaseRepeatButton>
                                                            <RepeatButton Command="Slider.IncreaseLarge">
                                                                <RepeatButton.Template>
                                                                    <ControlTemplate TargetType="RepeatButton">
                                                                        <Border Background="Transparent"/>
                                                                    </ControlTemplate>
                                                                </RepeatButton.Template>
                                                            </RepeatButton>
                                                        </Track.IncreaseRepeatButton>
                                                        <Track.Thumb>
                                                            <Thumb>
                                                                <Thumb.Template>
                                                                    <ControlTemplate TargetType="Thumb">
                                                                        <Grid>
                                                                            <Ellipse Width="16" Height="16" Fill="#FFFFFF">
                                                                                <Ellipse.Effect>
                                                                                    <DropShadowEffect BlurRadius="5" ShadowDepth="1" Color="#55000000"/>
                                                                                </Ellipse.Effect>
                                                                            </Ellipse>
                                                                        </Grid>
                                                                    </ControlTemplate>
                                                                </Thumb.Template>
                                                            </Thumb>
                                                        </Track.Thumb>
                                                    </Track>
                                                </Grid>
                                            </ControlTemplate>
                                        </Slider.Template>
                                    </Slider>
                                    
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Grid.Column="0" 
                                                   Text="Bleu"
                                                   Foreground="#BABAFE"/>
                                        <TextBlock Grid.Column="1" 
                                                   Text="{Binding Settings.BlueMultiplier, StringFormat='{}{0:P0}'}"
                                                   Foreground="#BABAFE"/>
                                    </Grid>
                                    <Slider Style="{StaticResource ModernSlider}"
                                            Minimum="0" Maximum="1" 
                                            Value="{Binding Settings.BlueMultiplier, Mode=TwoWay}"
                                            ValueChanged="Slider_ValueChanged">
                                        <Slider.Template>
                                            <ControlTemplate TargetType="Slider">
                                                <Grid>
                                                    <Grid.RowDefinitions>
                                                        <RowDefinition Height="Auto"/>
                                                        <RowDefinition Height="Auto" MinHeight="{TemplateBinding MinHeight}"/>
                                                        <RowDefinition Height="Auto"/>
                                                    </Grid.RowDefinitions>
                                                    <Border x:Name="TrackBackground" Grid.Row="1" Height="4" 
                                                           CornerRadius="2" Background="#22FFFFFF" Margin="7,0"/>
                                                    <Track x:Name="PART_Track" Grid.Row="1">
                                                        <Track.DecreaseRepeatButton>
                                                            <RepeatButton Command="Slider.DecreaseLarge">
                                                                <RepeatButton.Template>
                                                                    <ControlTemplate TargetType="RepeatButton">
                                                                        <Border Height="4" CornerRadius="2" Background="#BABAFE"/>
                                                                    </ControlTemplate>
                                                                </RepeatButton.Template>
                                                            </RepeatButton>
                                                        </Track.DecreaseRepeatButton>
                                                        <Track.IncreaseRepeatButton>
                                                            <RepeatButton Command="Slider.IncreaseLarge">
                                                                <RepeatButton.Template>
                                                                    <ControlTemplate TargetType="RepeatButton">
                                                                        <Border Background="Transparent"/>
                                                                    </ControlTemplate>
                                                                </RepeatButton.Template>
                                                            </RepeatButton>
                                                        </Track.IncreaseRepeatButton>
                                                        <Track.Thumb>
                                                            <Thumb>
                                                                <Thumb.Template>
                                                                    <ControlTemplate TargetType="Thumb">
                                                                        <Grid>
                                                                            <Ellipse Width="16" Height="16" Fill="#FFFFFF">
                                                                                <Ellipse.Effect>
                                                                                    <DropShadowEffect BlurRadius="5" ShadowDepth="1" Color="#55000000"/>
                                                                                </Ellipse.Effect>
                                                                            </Ellipse>
                                                                        </Grid>
                                                                    </ControlTemplate>
                                                                </Thumb.Template>
                                                            </Thumb>
                                                        </Track.Thumb>
                                                    </Track>
                                                </Grid>
                                            </ControlTemplate>
                                        </Slider.Template>
                                    </Slider>
                                </StackPanel>
                            </Grid>
                        </StackPanel>
                    </GroupBox>
                    
                    <!-- Bouton de restauration -->
                    <Button Content="RESTAURER ÉCRAN NORMAL" 
                            Margin="0,15,0,5" 
                            Height="40"
                            Click="RestoreScreen_Click"
                            Background="#22FFFFFF"
                            Foreground="White"
                            BorderThickness="0"
                            FontWeight="SemiBold">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Background="{TemplateBinding Background}"
                                        CornerRadius="8"
                                        Padding="{TemplateBinding Padding}">
                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#40FFFFFF"/>
                                    </Trigger>
                                    <Trigger Property="IsPressed" Value="True">
                                        <Setter Property="Background" Value="#60FFFFFF"/>
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                </StackPanel>
            </ScrollViewer>
        </Grid>
        
        <!-- Icône dans la barre des tâches -->
        <tb:TaskbarIcon IconSource="/Resources/Icons/AppIcon.ico"
                     ToolTipText="Foxy Blue Light">
            <tb:TaskbarIcon.ContextMenu>
                <ContextMenu Background="#2D2B55" BorderThickness="0">
                    <MenuItem Header="Activer/Désactiver" 
                              Command="{Binding ToggleFilterCommand}"
                              Foreground="White"/>
                    <MenuItem Header="Restaurer écran" 
                              Click="RestoreScreen_Click" 
                              Foreground="White"/>
                    <MenuItem Header="Afficher/Masquer" 
                              Click="ShowHideWindow_Click" 
                              Foreground="White"/>
                    <Separator Background="#33FFFFFF"/>
                    <MenuItem Header="Quitter" 
                              Command="{Binding ExitCommand}"
                              Foreground="White"/>
                </ContextMenu>
            </tb:TaskbarIcon.ContextMenu>
            <tb:TaskbarIcon.TrayToolTip>
                <Border Background="#2D2B55" 
                        CornerRadius="5" 
                        Padding="10" 
                        BorderThickness="0">
                    <TextBlock Text="{Binding StatusText}" Foreground="White"/>
                </Border>
            </tb:TaskbarIcon.TrayToolTip>
        </tb:TaskbarIcon>
    </Grid>
</Window>