<Window x:Class="FoxyBlueLight.Views.ModernWidget"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:tb="http://www.hardcodet.net/taskbar"
        xmlns:local="clr-namespace:FoxyBlueLight"
        xmlns:viewModels="clr-namespace:FoxyBlueLight.ViewModels"
        mc:Ignorable="d"
        Title="Foxy Light Filter" 
        Height="400" Width="300"
        WindowStyle="None" 
        AllowsTransparency="True"
        Background="Transparent"
        ResizeMode="NoResize"
        WindowStartupLocation="Manual"
        Topmost="True">
    
    <Window.DataContext>
        <viewModels:MainViewModel/>
    </Window.DataContext>
    
    <Window.Resources>
        <!-- Style pour les boutons de contrôle -->
        <Style x:Key="ControlButton" TargetType="Button">
            <Setter Property="Width" Value="28"/>
            <Setter Property="Height" Value="28"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Margin" Value="4,0,0,0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border CornerRadius="14" Background="{TemplateBinding Background}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#22FFFFFF"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#33FFFFFF"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <!-- Style pour les slider super modernes -->
        <Style x:Key="ModernSlider" TargetType="Slider">
            <Setter Property="Foreground" Value="#FFFFFF"/>
            <Setter Property="Background" Value="#222222"/>
            <Setter Property="Margin" Value="0,5"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Slider">
                        <Grid>
                            <!-- Track background -->
                            <Border Height="3" CornerRadius="1.5" Background="#22FFFFFF" Margin="7,0"/>
                            <!-- Track -->
                            <Track x:Name="PART_Track">
                                <Track.DecreaseRepeatButton>
                                    <RepeatButton Command="Slider.DecreaseLarge">
                                        <RepeatButton.Template>
                                            <ControlTemplate TargetType="RepeatButton">
                                                <Border Height="3" CornerRadius="1.5" Background="{TemplateBinding Background}"/>
                                            </ControlTemplate>
                                        </RepeatButton.Template>
                                        <RepeatButton.Background>
                                            <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                                <GradientStop Color="#FFFFFF" Offset="0"/>
                                                <GradientStop Color="#D4D4D4" Offset="1"/>
                                            </LinearGradientBrush>
                                        </RepeatButton.Background>
                                    </RepeatButton>
                                </Track.DecreaseRepeatButton>
                                <Track.IncreaseRepeatButton>
                                    <RepeatButton Command="Slider.IncreaseLarge">
                                        <RepeatButton.Template>
                                            <ControlTemplate TargetType="RepeatButton">
                                                <Border Background="Transparent"/>
                                            </ControlTemplate>
                                        </RepeatButton.Template>
                                    </RepeatButton>
                                </Track.IncreaseRepeatButton>
                                <Track.Thumb>
                                    <Thumb>
                                        <Thumb.Template>
                                            <ControlTemplate TargetType="Thumb">
                                                <Grid>
                                                    <Ellipse Width="14" Height="14" Fill="White">
                                                        <Ellipse.Effect>
                                                            <DropShadowEffect BlurRadius="4" ShadowDepth="1" Opacity="0.3"/>
                                                        </Ellipse.Effect>
                                                    </Ellipse>
                                                </Grid>
                                            </ControlTemplate>
                                        </Thumb.Template>
                                    </Thumb>
                                </Track.Thumb>
                            </Track>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <!-- Style pour les textes -->
        <Style x:Key="SliderLabel" TargetType="TextBlock">
            <Setter Property="Foreground" Value="#CCFFFFFF"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="Margin" Value="0,12,0,2"/>
        </Style>
        
        <!-- Style pour le texte de valeur -->
        <Style x:Key="ValueText" TargetType="TextBlock">
            <Setter Property="Foreground" Value="#FFFFFF"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="12"/>
        </Style>
    </Window.Resources>
    
    <!-- Surface pour déplacer la fenêtre -->
    <Grid MouseLeftButtonDown="Grid_MouseDown">
        <!-- Fond noir avec effet Acrylic (flou/transparent) -->
        <Border CornerRadius="16" x:Name="MainBackground">
            <Border.Background>
                <SolidColorBrush Color="#232323" Opacity="0.85"/>
            </Border.Background>
            <Border.Effect>
                <DropShadowEffect BlurRadius="15" ShadowDepth="2" Opacity="0.4" Color="Black"/>
            </Border.Effect>
        </Border>
        
        <!-- Contenu principal -->
        <Grid Margin="16">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/> <!-- Titre et boutons -->
                <RowDefinition Height="*"/> <!-- Contenu principal -->
            </Grid.RowDefinitions>
            
            <!-- Titre et boutons de contrôle -->
            <Grid Grid.Row="0" Margin="0,0,0,10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <!-- Titre -->
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="FOXY LIGHT FILTER" 
                           FontWeight="SemiBold" 
                           FontSize="14" 
                           Foreground="#FFFFFF" 
                           VerticalAlignment="Center"/>
                </StackPanel>
                
                <!-- Boutons de contrôle -->
                <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Right">
                    <Button Style="{StaticResource ControlButton}" Click="MinimizeButton_Click">
                        <Path Data="M19,13H5V11H19V13Z" Fill="White" Stretch="Uniform" Width="10"/>
                    </Button>
                    <Button Style="{StaticResource ControlButton}" Click="CloseButton_Click">
                        <Path Data="M19,6.41L17.59,5L12,10.59L6.41,5L5,6.41L10.59,12L5,17.59L6.41,19L12,13.41L17.59,19L19,17.59L13.41,12L19,6.41Z" 
                              Fill="White" Stretch="Uniform" Width="10"/>
                    </Button>
                </StackPanel>
            </Grid>
            
            <!-- Contenu principal -->
            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Hidden">
                <StackPanel>
                    <!-- Interrupteur ON/OFF principal -->
                    <Grid Margin="0,0,0,15">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        
                        <TextBlock Text="PROTECTION DES YEUX" 
                               Foreground="White" 
                               FontWeight="SemiBold"
                               VerticalAlignment="Center"/>
                        
                        <!-- Grand switch stylisé -->
                        <Border Grid.Column="1" Width="50" Height="28" 
                            CornerRadius="14"
                            Background="{Binding Settings.IsEnabled, Converter={StaticResource BoolToColorConverter}}"
                            MouseDown="ToggleSwitch_MouseDown"
                            Cursor="Hand">
                            <Canvas>
                                <Ellipse Width="24" Height="24" 
                                         Fill="White"
                                         Canvas.Top="2"
                                         Canvas.Left="0"
                                         x:Name="SwitchThumb">
                                    <Ellipse.Effect>
                                        <DropShadowEffect BlurRadius="4" ShadowDepth="1" Opacity="0.3"/>
                                    </Ellipse.Effect>
                                </Ellipse>
                            </Canvas>
                        </Border>
                    </Grid>
                    
                    <!-- Color Picker Simplifié -->
                    <StackPanel Margin="0,0,0,15" Visibility="{Binding IsCustomMode, Converter={StaticResource BoolToVisibilityConverter}}">
                        <TextBlock Text="COULEUR PERSONNALISÉE" Style="{StaticResource SliderLabel}"/>
                        
                        <!-- RGB Sliders -->
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            
                            <!-- Rouge -->
                            <StackPanel Grid.Row="0">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    
                                    <TextBlock Grid.Column="0" Text="Rouge" Foreground="#FFCCCC"/>
                                    <TextBlock Grid.Column="1" Text="{Binding Settings.RedMultiplier, StringFormat='{}{0:P0}'}" Foreground="#FFCCCC"/>
                                </Grid>
                                <Slider Style="{StaticResource ModernSlider}" Minimum="0" Maximum="1" 
                                    Value="{Binding Settings.RedMultiplier}" ValueChanged="ColorSlider_ValueChanged">
                                    <Slider.Template>
                                        <ControlTemplate TargetType="Slider">
                                            <Grid>
                                                <Border Height="3" CornerRadius="1.5" Background="#22FFFFFF" Margin="7,0"/>
                                                <Track x:Name="PART_Track">
                                                    <Track.DecreaseRepeatButton>
                                                        <RepeatButton Command="Slider.DecreaseLarge">
                                                            <RepeatButton.Template>
                                                                <ControlTemplate TargetType="RepeatButton">
                                                                    <Border Height="3" CornerRadius="1.5" Background="#FFCCCC"/>
                                                                </ControlTemplate>
                                                            </RepeatButton.Template>
                                                        </RepeatButton>
                                                    </Track.DecreaseRepeatButton>
                                                    <Track.IncreaseRepeatButton>
                                                        <RepeatButton Command="Slider.IncreaseLarge">
                                                            <RepeatButton.Template>
                                                                <ControlTemplate TargetType="RepeatButton">
                                                                    <Border Background="Transparent"/>
                                                                </ControlTemplate>
                                                            </RepeatButton.Template>
                                                        </RepeatButton>
                                                    </Track.IncreaseRepeatButton>
                                                    <Track.Thumb>
                                                        <Thumb>
                                                            <Thumb.Template>
                                                                <ControlTemplate TargetType="Thumb">
                                                                    <Ellipse Width="14" Height="14" Fill="White">
                                                                        <Ellipse.Effect>
                                                                            <DropShadowEffect BlurRadius="4" ShadowDepth="1" Opacity="0.3"/>
                                                                        </Ellipse.Effect>
                                                                    </Ellipse>
                                                                </ControlTemplate>
                                                            </Thumb.Template>
                                                        </Thumb>
                                                    </Track.Thumb>
                                                </Track>
                                            </Grid>
                                        </ControlTemplate>
                                    </Slider.Template>
                                </Slider>
                            </StackPanel>
                            
                            <!-- Vert -->
                            <StackPanel Grid.Row="1" Margin="0,10,0,0">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    
                                    <TextBlock Grid.Column="0" Text="Vert" Foreground="#CCFFCC"/>
                                    <TextBlock Grid.Column="1" Text="{Binding Settings.GreenMultiplier, StringFormat='{}{0:P0}'}" Foreground="#CCFFCC"/>
                                </Grid>
                                <Slider Style="{StaticResource ModernSlider}" Minimum="0" Maximum="1" 
                                    Value="{Binding Settings.GreenMultiplier}" ValueChanged="ColorSlider_ValueChanged">
                                    <Slider.Template>
                                        <ControlTemplate TargetType="Slider">
                                            <Grid>
                                                <Border Height="3" CornerRadius="1.5" Background="#22FFFFFF" Margin="7,0"/>
                                                <Track x:Name="PART_Track">
                                                    <Track.DecreaseRepeatButton>
                                                        <RepeatButton Command="Slider.DecreaseLarge">
                                                            <RepeatButton.Template>
                                                                <ControlTemplate TargetType="RepeatButton">
                                                                    <Border Height="3" CornerRadius="1.5" Background="#CCFFCC"/>
                                                                </ControlTemplate>
                                                            </RepeatButton.Template>
                                                        </RepeatButton>
                                                    </Track.DecreaseRepeatButton>
                                                    <Track.IncreaseRepeatButton>
                                                        <RepeatButton Command="Slider.IncreaseLarge">
                                                            <RepeatButton.Template>
                                                                <ControlTemplate TargetType="RepeatButton">
                                                                    <Border Background="Transparent"/>
                                                                </ControlTemplate>
                                                            </RepeatButton.Template>
                                                        </RepeatButton>
                                                    </Track.IncreaseRepeatButton>
                                                    <Track.Thumb>
                                                        <Thumb>
                                                            <Thumb.Template>
                                                                <ControlTemplate TargetType="Thumb">
                                                                    <Ellipse Width="14" Height="14" Fill="White">
                                                                        <Ellipse.Effect>
                                                                            <DropShadowEffect BlurRadius="4" ShadowDepth="1" Opacity="0.3"/>
                                                                        </Ellipse.Effect>
                                                                    </Ellipse>
                                                                </ControlTemplate>
                                                            </Thumb.Template>
                                                        </Thumb>
                                                    </Track.Thumb>
                                                </Track>
                                            </Grid>
                                        </ControlTemplate>
                                    </Slider.Template>
                                </Slider>
                            </StackPanel>
                            
                            <!-- Bleu -->
                            <StackPanel Grid.Row="2" Margin="0,10,0,0">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    
                                    <TextBlock Grid.Column="0" Text="Bleu" Foreground="#CCCCFF"/>
                                    <TextBlock Grid.Column="1" Text="{Binding Settings.BlueMultiplier, StringFormat='{}{0:P0}'}" Foreground="#CCCCFF"/>
                                </Grid>
                                <Slider Style="{StaticResource ModernSlider}" Minimum="0" Maximum="1" 
                                    Value="{Binding Settings.BlueMultiplier}" ValueChanged="ColorSlider_ValueChanged">
                                    <Slider.Template>
                                        <ControlTemplate TargetType="Slider">
                                            <Grid>
                                                <Border Height="3" CornerRadius="1.5" Background="#22FFFFFF" Margin="7,0"/>
                                                <Track x:Name="PART_Track">
                                                    <Track.DecreaseRepeatButton>
                                                        <RepeatButton Command="Slider.DecreaseLarge">
                                                            <RepeatButton.Template>
                                                                <ControlTemplate TargetType="RepeatButton">
                                                                    <Border Height="3" CornerRadius="1.5" Background="#CCCCFF"/>
                                                                </ControlTemplate>
                                                            </RepeatButton.Template>
                                                        </RepeatButton>
                                                    </Track.DecreaseRepeatButton>
                                                    <Track.IncreaseRepeatButton>
                                                        <RepeatButton Command="Slider.IncreaseLarge">
                                                            <RepeatButton.Template>
                                                                <ControlTemplate TargetType="RepeatButton">
                                                                    <Border Background="Transparent"/>
                                                                </ControlTemplate>
                                                            </RepeatButton.Template>
                                                        </RepeatButton>
                                                    </Track.IncreaseRepeatButton>
                                                    <Track.Thumb>
                                                        <Thumb>
                                                            <Thumb.Template>
                                                                <ControlTemplate TargetType="Thumb">
                                                                    <Ellipse Width="14" Height="14" Fill="White">
                                                                        <Ellipse.Effect>
                                                                            <DropShadowEffect BlurRadius="4" ShadowDepth="1" Opacity="0.3"/>
                                                                        </Ellipse.Effect>
                                                                    </Ellipse>
                                                                </ControlTemplate>
                                                            </Thumb.Template>
                                                        </Thumb>
                                                    </Track.Thumb>
                                                </Track>
                                            </Grid>
                                        </ControlTemplate>
                                    </Slider.Template>
                                </Slider>
                            </StackPanel>
                        </Grid>
                        
                        <!-- Prévisualisation de couleur -->
                        <Border Height="30" CornerRadius="4" Margin="0,10,0,0">
                            <Border.Background>
                                <SolidColorBrush Color="{Binding PreviewColor}"/>
                            </Border.Background>
                        </Border>
                    </StackPanel>
                    
                    <!-- Température -->
                    <Grid Margin="0,0,0,8">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        
                        <TextBlock Grid.Row="0" Grid.Column="0" Text="TEMPÉRATURE" Style="{StaticResource SliderLabel}"/>
                        <TextBlock Grid.Row="0" Grid.Column="1" Style="{StaticResource ValueText}"
                               Text="{Binding Settings.ColorTemperature, StringFormat='{}{0:N0}K'}"/>
                        
                        <Slider Grid.Row="1" Grid.ColumnSpan="2"
                            Style="{StaticResource ModernSlider}"
                            Minimum="1900" Maximum="6500" 
                            SmallChange="100" LargeChange="500"
                            Value="{Binding Settings.ColorTemperature}"
                            ValueChanged="Slider_ValueChanged"/>
                    </Grid>
                    
                    <!-- Intensité -->
                    <Grid Margin="0,0,0,8">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        
                        <TextBlock Grid.Row="0" Grid.Column="0" Text="INTENSITÉ" Style="{StaticResource SliderLabel}"/>
                        <TextBlock Grid.Row="0" Grid.Column="1" Style="{StaticResource ValueText}"
                               Text="{Binding Settings.Intensity, StringFormat='{}{0:P0}'}"/>
                        
                        <Slider Grid.Row="1" Grid.ColumnSpan="2"
                            Style="{StaticResource ModernSlider}"
                            Minimum="0" Maximum="1" 
                            SmallChange="0.01" LargeChange="0.1"
                            Value="{Binding Settings.Intensity}"
                            ValueChanged="Slider_ValueChanged"/>
                    </Grid>
                    
                    <!-- Luminosité -->
                    <Grid Margin="0,0,0,15">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        
                        <TextBlock Grid.Row="0" Grid.Column="0" Text="LUMINOSITÉ" Style="{StaticResource SliderLabel}"/>
                        <TextBlock Grid.Row="0" Grid.Column="1" Style="{StaticResource ValueText}"
                               Text="{Binding Settings.Brightness, StringFormat='{}{0:P0}'}"/>
                        
                        <Slider Grid.Row="1" Grid.ColumnSpan="2"
                            Style="{StaticResource ModernSlider}"
                            Minimum="0.1" Maximum="1" 
                            SmallChange="0.01" LargeChange="0.1"
                            Value="{Binding Settings.Brightness}"
                            ValueChanged="Slider_ValueChanged"/>
                    </Grid>
                    
                    <!-- Mode -->
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        
                        <TextBlock Text="MODE" Style="{StaticResource SliderLabel}"/>
                        
                        <ComboBox Grid.Column="1" 
                              ItemsSource="{Binding FilterModeNames}"
                              SelectedIndex="{Binding SelectedModeIndex}"
                              Background="#33FFFFFF"
                              Foreground="White"
                              BorderThickness="0"
                              Width="120"
                              SelectionChanged="Mode_SelectionChanged"/>
                    </Grid>
                    
                    <!-- Bouton Restauration -->
                    <Button Content="RESTAURER ÉCRAN" 
                        Margin="0,20,0,0" 
                        Height="36"
                        Click="RestoreScreen_Click"
                        Cursor="Hand"
                        Foreground="White"
                        FontWeight="SemiBold"
                        BorderThickness="0">
                        <Button.Background>
                            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                <GradientStop Color="#4D4D4D" Offset="0"/>
                                <GradientStop Color="#333333" Offset="1"/>
                            </LinearGradientBrush>
                        </Button.Background>
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Background="{TemplateBinding Background}"
                                    BorderBrush="{TemplateBinding BorderBrush}"
                                    BorderThickness="{TemplateBinding BorderThickness}"
                                    CornerRadius="8">
                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background">
                                            <Setter.Value>
                                                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                                    <GradientStop Color="#555555" Offset="0"/>
                                                    <GradientStop Color="#444444" Offset="1"/>
                                                </LinearGradientBrush>
                                            </Setter.Value>
                                        </Setter>
                                    </Trigger>
                                    <Trigger Property="IsPressed" Value="True">
                                        <Setter Property="Background">
                                            <Setter.Value>
                                                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                                    <GradientStop Color="#333333" Offset="0"/>
                                                    <GradientStop Color="#4D4D4D" Offset="1"/>
                                                </LinearGradientBrush>
                                            </Setter.Value>
                                        </Setter>
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                </StackPanel>
            </ScrollViewer>
        </Grid>
        
        <!-- Icône dans la barre des tâches -->
        <tb:TaskbarIcon IconSource="/Resources/Icons/AppIcon.ico"
                     ToolTipText="Foxy Light Filter">
            <tb:TaskbarIcon.ContextMenu>
                <ContextMenu Background="#232323" BorderThickness="0">
                    <MenuItem Header="Activer/Désactiver" 
                              Command="{Binding ToggleFilterCommand}"
                              Foreground="White"/>
                    <MenuItem Header="Restaurer écran" 
                              Click="RestoreScreen_Click" 
                              Foreground="White"/>
                    <MenuItem Header="Afficher/Masquer" 
                              Click="ShowHideWindow_Click" 
                              Foreground="White"/>
                    <Separator Background="#444444"/>
                    <MenuItem Header="Quitter" 
                              Command="{Binding ExitCommand}"
                              Foreground="White"/>
                </ContextMenu>
            </tb:TaskbarIcon.ContextMenu>
        </tb:TaskbarIcon>
    </Grid>
</Window>