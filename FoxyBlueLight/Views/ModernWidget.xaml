<Window x:Class="FoxyBlueLight.Views.ModernWidget"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:tb="http://www.hardcodet.net/taskbar"
        xmlns:local="clr-namespace:FoxyBlueLight"
        xmlns:views="clr-namespace:FoxyBlueLight.Views"
        xmlns:viewModels="clr-namespace:FoxyBlueLight.ViewModels"
        mc:Ignorable="d"
        Title="Foxy Light Filter" 
        Height="500" Width="340"
        WindowStyle="None" 
        AllowsTransparency="True"
        Background="Transparent"
        ResizeMode="NoResize"
        WindowStartupLocation="Manual"
        Topmost="True">
    
    <Window.DataContext>
        <viewModels:MainViewModel/>
    </Window.DataContext>

    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVisConverter"/>
    </Window.Resources>
    
    <!-- Surface pour déplacer la fenêtre -->
    <Grid MouseLeftButtonDown="Grid_MouseDown">
        <!-- Fond avec effet Acrylic -->
        <Border CornerRadius="20" x:Name="MainBackground">
            <Border.Background>
                <SolidColorBrush Color="#151515" Opacity="{Binding Settings.Opacity}"/>
            </Border.Background>
            <Border.Effect>
                <DropShadowEffect BlurRadius="15" ShadowDepth="3" Opacity="0.5" Color="Black"/>
            </Border.Effect>
        </Border>
        
        <!-- Contenu principal -->
        <Grid Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/> <!-- Titre et boutons -->
                <RowDefinition Height="*"/> <!-- Contenu principal -->
                <RowDefinition Height="Auto"/> <!-- Barre de statut -->
            </Grid.RowDefinitions>
            
            <!-- Titre et boutons de contrôle -->
            <Grid Grid.Row="0" Margin="0,0,0,10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <!-- Titre avec logo -->
                <StackPanel Orientation="Horizontal">
                    <Image Source="/Resources/logo.png" Width="22" Height="22" Margin="0,0,10,0"/>
                    <TextBlock Text="FOXY LIGHT FILTER" 
                           FontWeight="SemiBold" 
                           FontSize="16" 
                           Foreground="White"
                           VerticalAlignment="Center"/>
                </StackPanel>
                
                <!-- Boutons de contrôle -->
                <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Right">
                    <Button Width="30" Height="30" Background="Transparent" BorderThickness="0" 
                            Click="MinimizeButton_Click" Cursor="Hand">
                        <Path Data="M19,13H5V11H19V13Z" Fill="White" Stretch="Uniform" Width="12"/>
                    </Button>
                    <Button Width="30" Height="30" Background="Transparent" BorderThickness="0"
                            Click="CloseButton_Click" Cursor="Hand">
                        <Path Data="M19,6.41L17.59,5L12,10.59L6.41,5L5,6.41L10.59,12L5,17.59L6.41,19L12,13.41L17.59,19L19,17.59L13.41,12L19,6.41Z" 
                              Fill="White" Stretch="Uniform" Width="12"/>
                    </Button>
                </StackPanel>
            </Grid>
            
            <!-- Contenu principal -->
            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Margin="0,5,0,0"
                         HorizontalScrollBarVisibility="Hidden"
                         Template="{StaticResource DarkScrollViewerControlTemplate}">
                <StackPanel>
                    <!-- Interrupteur principal ON/OFF -->
                    <Grid Margin="0,5,0,15">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        
                        <TextBlock Text="PROTECTION DES YEUX" 
                               Foreground="White" 
                               FontSize="14"
                               FontWeight="Medium"
                               VerticalAlignment="Center"/>
                        
                        <!-- Grand switch stylisé -->
                        <Border Grid.Column="1" Width="52" Height="28" 
                            CornerRadius="14"
                            Background="#333333" 
                            x:Name="ToggleBackground"
                            Cursor="Hand"
                            MouseDown="ToggleSwitch_MouseDown">
                            <Canvas>
                                <Ellipse Width="24" Height="24" 
                                     Fill="White"
                                     Canvas.Top="2"
                                     Canvas.Left="2"
                                     x:Name="SwitchThumb">
                                    <Ellipse.Effect>
                                        <DropShadowEffect BlurRadius="4" ShadowDepth="1" Opacity="0.3"/>
                                    </Ellipse.Effect>
                                </Ellipse>
                            </Canvas>
                        </Border>
                    </Grid>
                    
                    <!-- Séparateur -->
                    <Border Height="1" Background="#333333" Margin="0,0,0,15"/>
                    
                    <!-- Mode sélection -->
                    <Grid Margin="0,0,0,15">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        
                        <TextBlock Text="MODE" 
                                  Foreground="White" 
                                  FontSize="13"
                                  FontWeight="Medium"
                                  VerticalAlignment="Center"/>
                        
                        <ComboBox Grid.Column="1" 
                                Width="150"
                                ItemsSource="{Binding FilterModeNames}"
                                SelectedIndex="{Binding ModeIndex, Mode=TwoWay}"
                                Background="#222222"
                                Foreground="White"
                                BorderThickness="1"
                                BorderBrush="#444444"
                                SelectionChanged="ModeComboBox_SelectionChanged">
                        </ComboBox>
                    </Grid>
                    
                    <!-- Type d'atténuation -->
                    <Grid Margin="0,0,0,15">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        
                        <TextBlock Text="TYPE D'ATTÉNUATION" 
                                  Foreground="White" 
                                  FontSize="13"
                                  FontWeight="Medium"
                                  VerticalAlignment="Center"/>
                        
                        <ComboBox Grid.Column="1" 
                                Width="150"
                                ItemsSource="{Binding AttenuationTypeNames}"
                                SelectedIndex="{Binding AttenuationTypeIndex, Mode=TwoWay}"
                                Background="#222222"
                                Foreground="White"
                                BorderThickness="1"
                                BorderBrush="#444444"
                                SelectionChanged="AttenuationComboBox_SelectionChanged">
                        </ComboBox>
                    </Grid>
                    
                    <!-- Palette de couleurs - Visible uniquement en mode personnalisé -->
                    <StackPanel Visibility="{Binding IsCustomMode, Converter={StaticResource BoolToVisConverter}}">
                        <TextBlock Text="COULEURS PRÉDÉFINIES" 
                                 Foreground="White" 
                                 FontSize="13"
                                 FontWeight="Medium"
                                 Margin="0,0,0,5"/>
                        
                        <WrapPanel HorizontalAlignment="Center" Margin="0,5,0,15">
                            <!-- Boutons de couleurs prédéfinies -->
                            <Button Width="36" Height="36" Margin="4" 
                                   Background="#FFE3B9" 
                                   BorderThickness="0"
                                   Command="{Binding SelectPresetColorCommand}" 
                                   CommandParameter="#FFE3B9">
                                <Button.Template>
                                    <ControlTemplate TargetType="Button">
                                        <Grid>
                                            <Ellipse Fill="{TemplateBinding Background}"/>
                                            <Ellipse x:Name="highlight" Stroke="White" StrokeThickness="0"/>
                                        </Grid>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter TargetName="highlight" Property="StrokeThickness" Value="2"/>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Button.Template>
                            </Button>
                            
                            <Button Width="36" Height="36" Margin="4" 
                                   Background="#FFD689" 
                                   BorderThickness="0"
                                   Command="{Binding SelectPresetColorCommand}" 
                                   CommandParameter="#FFD689">
                                <Button.Template>
                                    <ControlTemplate TargetType="Button">
                                        <Grid>
                                            <Ellipse Fill="{TemplateBinding Background}"/>
                                            <Ellipse x:Name="highlight" Stroke="White" StrokeThickness="0"/>
                                        </Grid>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter TargetName="highlight" Property="StrokeThickness" Value="2"/>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Button.Template>
                            </Button>
                            
                            <Button Width="36" Height="36" Margin="4" 
                                   Background="#FFECB3" 
                                   BorderThickness="0"
                                   Command="{Binding SelectPresetColorCommand}" 
                                   CommandParameter="#FFECB3">
                                <Button.Template>
                                    <ControlTemplate TargetType="Button">
                                        <Grid>
                                            <Ellipse Fill="{TemplateBinding Background}"/>
                                            <Ellipse x:Name="highlight" Stroke="White" StrokeThickness="0"/>
                                        </Grid>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter TargetName="highlight" Property="StrokeThickness" Value="2"/>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Button.Template>
                            </Button>
                            
                            <Button Width="36" Height="36" Margin="4" 
                                   Background="#E0F2F1" 
                                   BorderThickness="0"
                                   Command="{Binding SelectPresetColorCommand}" 
                                   CommandParameter="#E0F2F1">
                                <Button.Template>
                                    <ControlTemplate TargetType="Button">
                                        <Grid>
                                            <Ellipse Fill="{TemplateBinding Background}"/>
                                            <Ellipse x:Name="highlight" Stroke="White" StrokeThickness="0"/>
                                        </Grid>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter TargetName="highlight" Property="StrokeThickness" Value="2"/>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Button.Template>
                            </Button>
                        </WrapPanel>
                    </StackPanel>
                    
                    <!-- Contrôles RGB (visible uniquement en mode personnalisé) -->
                    <StackPanel Visibility="{Binding IsCustomMode, Converter={StaticResource BoolToVisConverter}}">
                        <!-- Rouge -->
                        <Grid Margin="0,0,0,8">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            
                            <TextBlock Grid.Row="0" Grid.Column="0" Text="ROUGE" 
                                     Foreground="#FFBBBB" 
                                     FontSize="13"
                                     FontWeight="Medium"/>
                                     
                            <TextBlock Grid.Row="0" Grid.Column="1" 
                                     Foreground="#FFBBBB"
                                     FontWeight="Medium"
                                     FontSize="13"
                                     Text="{Binding Settings.RedMultiplier, StringFormat='{}{0:P0}'}"/>
                            
                            <Slider Grid.Row="1" Grid.ColumnSpan="2"
                                  Margin="0,5"
                                  Minimum="0" Maximum="1" 
                                  SmallChange="0.01" LargeChange="0.1"
                                  Value="{Binding Settings.RedMultiplier}"
                                  ValueChanged="RGBSlider_ValueChanged"/>
                        </Grid>
                        
                        <!-- Vert -->
                        <Grid Margin="0,0,0,8">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            
                            <TextBlock Grid.Row="0" Grid.Column="0" Text="VERT" 
                                     Foreground="#BBFFBB" 
                                     FontSize="13"
                                     FontWeight="Medium"/>
                                     
                            <TextBlock Grid.Row="0" Grid.Column="1" 
                                     Foreground="#BBFFBB"
                                     FontWeight="Medium"
                                     FontSize="13"
                                     Text="{Binding Settings.GreenMultiplier, StringFormat='{}{0:P0}'}"/>
                            
                            <Slider Grid.Row="1" Grid.ColumnSpan="2"
                                  Margin="0,5"
                                  Minimum="0" Maximum="1" 
                                  SmallChange="0.01" LargeChange="0.1"
                                  Value="{Binding Settings.GreenMultiplier}"
                                  ValueChanged="RGBSlider_ValueChanged"/>
                        </Grid>
                        
                        <!-- Bleu -->
                        <Grid Margin="0,0,0,8">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            
                            <TextBlock Grid.Row="0" Grid.Column="0" Text="BLEU" 
                                     Foreground="#BBBBFF" 
                                     FontSize="13"
                                     FontWeight="Medium"/>
                                     
                            <TextBlock Grid.Row="0" Grid.Column="1" 
                                     Foreground="#BBBBFF"
                                     FontWeight="Medium"
                                     FontSize="13"
                                     Text="{Binding Settings.BlueMultiplier, StringFormat='{}{0:P0}'}"/>
                            
                            <Slider Grid.Row="1" Grid.ColumnSpan="2"
                                  Margin="0,5"
                                  Minimum="0" Maximum="1" 
                                  SmallChange="0.01" LargeChange="0.1"
                                  Value="{Binding Settings.BlueMultiplier}"
                                  ValueChanged="RGBSlider_ValueChanged"/>
                        </Grid>
                        
                        <!-- Aperçu de la couleur -->
                        <Border Height="30" CornerRadius="4" Margin="0,5,0,15">
                            <Border.Background>
                                <SolidColorBrush Color="{Binding PreviewColor}"/>
                            </Border.Background>
                        </Border>
                    </StackPanel>
                    
                    <!-- Température (visible uniquement en mode température) -->
                    <Grid Visibility="{Binding IsTemperatureMode, Converter={StaticResource BoolToVisConverter}}"
                          Margin="0,0,0,15">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        
                        <TextBlock Grid.Row="0" Grid.Column="0" Text="TEMPÉRATURE"
                                 Foreground="White" 
                                 FontSize="13"
                                 FontWeight="Medium"/>
                                 
                        <TextBlock Grid.Row="0" Grid.Column="1" 
                                 Foreground="White"
                                 FontWeight="Medium"
                                 FontSize="13"
                                 Text="{Binding Settings.ColorTemperature, StringFormat='{}{0:N0}K'}"/>
                        
                        <Slider Grid.Row="1" Grid.ColumnSpan="2"
                              Margin="0,5"
                              Minimum="1900" Maximum="6500" 
                              SmallChange="100" LargeChange="500"
                              Value="{Binding Settings.ColorTemperature}"
                              ValueChanged="ParamSlider_ValueChanged"/>
                    </Grid>
                    
                    <!-- Intensité -->
                    <Grid Margin="0,0,0,15">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        
                        <TextBlock Grid.Row="0" Grid.Column="0" Text="INTENSITÉ"
                                 Foreground="White" 
                                 FontSize="13"
                                 FontWeight="Medium"/>
                                 
                        <TextBlock Grid.Row="0" Grid.Column="1" 
                                 Foreground="White"
                                 FontWeight="Medium"
                                 FontSize="13"
                                 Text="{Binding Settings.Intensity, StringFormat='{}{0:P0}'}"/>
                        
                        <Slider Grid.Row="1" Grid.ColumnSpan="2"
                              Margin="0,5"
                              Minimum="0" Maximum="1" 
                              SmallChange="0.01" LargeChange="0.1"
                              Value="{Binding Settings.Intensity}"
                              ValueChanged="ParamSlider_ValueChanged"/>
                    </Grid>
                    
                    <!-- Luminosité -->
                    <Grid Margin="0,0,0,15">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        
                        <TextBlock Grid.Row="0" Grid.Column="0" Text="LUMINOSITÉ" 
                                 Foreground="White" 
                                 FontSize="13"
                                 FontWeight="Medium"/>
                                 
                        <TextBlock Grid.Row="0" Grid.Column="1" 
                                 Foreground="White"
                                 FontWeight="Medium"
                                 FontSize="13"
                                 Text="{Binding Settings.Brightness, StringFormat='{}{0:P0}'}"/>
                        
                        <Slider Grid.Row="1" Grid.ColumnSpan="2"
                              Margin="0,5"
                              Minimum="0.1" Maximum="1" 
                              SmallChange="0.01" LargeChange="0.1"
                              Value="{Binding Settings.Brightness}"
                              ValueChanged="ParamSlider_ValueChanged"/>
                    </Grid>
                    
                    <!-- Transparence du widget -->
                    <Grid Margin="0,0,0,15">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        
                        <TextBlock Grid.Row="0" Grid.Column="0" Text="TRANSPARENCE" 
                                 Foreground="White" 
                                 FontSize="13"
                                 FontWeight="Medium"/>
                                 
                        <TextBlock Grid.Row="0" Grid.Column="1" 
                                 Foreground="White"
                                 FontWeight="Medium"
                                 FontSize="13"
                                 Text="{Binding Settings.Opacity, StringFormat='{}{0:P0}'}"/>
                        
                        <Slider Grid.Row="1" Grid.ColumnSpan="2"
                              Margin="0,5"
                              Minimum="0.5" Maximum="1" 
                              SmallChange="0.01" LargeChange="0.1"
                              Value="{Binding Settings.Opacity}"/>
                    </Grid>
                    
                    <!-- Paramètres de planification -->
                    <Grid Margin="0,0,0,10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        
                        <TextBlock Text="ACTIVATION PROGRAMMÉE" 
                                 Foreground="White" 
                                 FontSize="13"
                                 FontWeight="Medium"
                                 VerticalAlignment="Center"/>
                        
                        <CheckBox Grid.Column="1" 
                                 IsChecked="{Binding Settings.UseSchedule}"
                                 Content="Activer"
                                 Foreground="White"/>
                    </Grid>
                    
                    <!-- Heures d'activation (visible si planification activée) -->
                    <Grid Visibility="{Binding Settings.UseSchedule, Converter={StaticResource BoolToVisConverter}}" 
                          Margin="0,0,0,15">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        
                        <!-- Heure d'activation -->
                        <StackPanel Grid.Row="0" Grid.Column="0" Margin="0,0,5,0">
                            <TextBlock Text="ACTIVATION" 
                                     Foreground="White" 
                                     FontSize="13"
                                     FontWeight="Medium"
                                     Margin="0,0,0,5"/>
                                     
                            <views:TimePicker SelectedTime="{Binding Settings.ActivationTime, Mode=TwoWay}"/>
                        </StackPanel>
                        
                        <!-- Heure de désactivation -->
                        <StackPanel Grid.Row="0" Grid.Column="1" Margin="5,0,0,0">
                            <TextBlock Text="DÉSACTIVATION" 
                                     Foreground="White" 
                                     FontSize="13"
                                     FontWeight="Medium"
                                     Margin="0,0,0,5"/>
                                     
                            <views:TimePicker SelectedTime="{Binding Settings.DeactivationTime, Mode=TwoWay}"/>
                        </StackPanel>
                        
                        <!-- Explication -->
                        <TextBlock Grid.Row="1" Grid.ColumnSpan="2"
                                 Text="Le filtre s'activera et se désactivera automatiquement aux heures indiquées."
                                 Foreground="#AAAAAA"
                                 FontSize="11"
                                 TextWrapping="Wrap"
                                 Margin="0,8,0,0"/>
                    </Grid>
                    
                    <!-- Séparateur -->
                    <Border Height="1" Background="#333333" Margin="0,0,0,15"/>
                    
                    <!-- Boutons -->
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        
                        <Button Grid.Column="0" Content="RESTAURER ÉCRAN" 
                              Height="36"
                              Margin="0,0,5,0"
                              Background="#333333"
                              Foreground="White"
                              BorderThickness="0"
                              Command="{Binding RestoreScreenCommand}"
                              Cursor="Hand"/>
                              
                        <Button Grid.Column="1" Content="APPLIQUER" 
                              Height="36"
                              Margin="5,0,0,0"
                              Background="#FF6700"
                              Foreground="White"
                              BorderThickness="0"
                              Command="{Binding ApplyChangesCommand}"
                              Cursor="Hand"/>
                    </Grid>
                </StackPanel>
            </ScrollViewer>
            
            <!-- Barre de statut -->
            <Border Grid.Row="2" Background="#222222" 
                  Height="30" CornerRadius="4" 
                  Margin="0,10,0,0">
                <TextBlock Text="{Binding StatusText}" 
                         Foreground="#CCCCCC"
                         VerticalAlignment="Center"
                         HorizontalAlignment="Center"/>
            </Border>
        </Grid>
        
        <!-- Icône dans la barre des tâches -->
        <tb:TaskbarIcon IconSource="/Resources/Icons/AppIcon.ico"
                     ToolTipText="Foxy Light Filter">
            <tb:TaskbarIcon.ContextMenu>
                <ContextMenu Background="#151515" BorderThickness="0">
                    <ContextMenu.Resources>
                        <Style TargetType="MenuItem">
                            <Setter Property="Foreground" Value="White"/>
                            <Setter Property="Background" Value="Transparent"/>
                            <Setter Property="BorderThickness" Value="0"/>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#333333"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                        <Style TargetType="Separator">
                            <Setter Property="Background" Value="#333333"/>
                        </Style>
                    </ContextMenu.Resources>
                    <MenuItem Header="Activer/Désactiver" Command="{Binding ToggleFilterCommand}"/>
                    <MenuItem Header="Restaurer écran" Command="{Binding RestoreScreenCommand}"/>
                    <MenuItem Header="Afficher/Masquer" Click="ShowHideWindow_Click"/>
                    <Separator/>
                    <MenuItem Header="Quitter" Command="{Binding ExitCommand}"/>
                </ContextMenu>
            </tb:TaskbarIcon.ContextMenu>
        </tb:TaskbarIcon>
    </Grid>
</Window>