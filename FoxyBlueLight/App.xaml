<Application x:Class="FoxyBlueLight.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:FoxyBlueLight"
             xmlns:helpers="clr-namespace:FoxyBlueLight.Helpers">
    <Application.Resources>
        <ResourceDictionary>
            <!-- Convertisseurs de base -->
            <BooleanToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
            <helpers:BoolToStringConverter x:Key="BoolToStringConverter" TrueValue="ON" FalseValue="OFF"/>
            <helpers:BoolToColorConverter x:Key="BoolToColorConverter"/>
            <helpers:BoolToAlignmentConverter x:Key="BoolToAlignmentConverter"/>
            
            <!-- Ajoutez ces convertisseurs -->
            <helpers:BoolToLeftPosConverter x:Key="BoolToLeftPosConverter"/>
            <helpers:MultiplyByConverter x:Key="MultiplyByConverter"/>
        </ResourceDictionary>
    </Application.Resources>
</Application>