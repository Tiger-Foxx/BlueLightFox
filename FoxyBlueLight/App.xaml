<Application x:Class="FoxyBlueLight.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:FoxyBlueLight"
             xmlns:helpers="clr-namespace:FoxyBlueLight.Helpers"
             xmlns:media="clr-namespace:System.Windows.Media.Animation;assembly=PresentationCore">
    <Application.Resources>
        <ResourceDictionary>
            <!-- Convertisseurs -->
            <BooleanToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
            <helpers:BoolToStringConverter x:Key="BoolToStringConverter" TrueValue="ON" FalseValue="OFF"/>
            <helpers:BoolToColorConverter x:Key="BoolToColorConverter"/>
            <helpers:BoolToAlignmentConverter x:Key="BoolToAlignmentConverter"/>
            
            <!-- Effets -->
            <media:ElasticEase x:Key="ElasticEase" Oscillations="1" Springiness="3"/>
        </ResourceDictionary>
    </Application.Resources>
</Application>